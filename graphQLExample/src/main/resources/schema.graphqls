
type Query {
	helloWorld:String!
	greeting(firstName:String!, lastName:String): String!
	# return collection of books	
	books:[Book]
	bookById(id:Int):Book
	publishers: [Publisher]
}

type Book {
	id:Int,
	title:String!,
	totalPages:Int,
	rating:Float,
	isbn:String,
	publisher:Publisher # Many To One
}

type Publisher {
 id: Int,
 name: String,
 books: [Book] # one to many
}